@page "/admin"
@using Microsoft.AspNetCore.SignalR.Client
@inject NavigationManager Navigation
@implements IAsyncDisposable

<div class="god-mode-layout">
    
    
    <aside class="admin-sidebar">
        <div class="sidebar-brand">
            <div class="brand-icon"><i class="fas fa-shield-virus"></i></div>
            <div class="brand-text">
                <span class="main">RuNon</span>
                <span class="sub">Overseer</span>
            </div>
        </div>

        <nav class="nav-menu">
            <button class="nav-item @(_activeTab == "voice" ? "active" : "")" @onclick='() => SetTab("voice")'>
                <i class="fas fa-microphone-alt"></i>
                <span>Voice Rooms</span>
                <span class="badge">@_voiceRooms.Count</span>
            </button>
            <button class="nav-item @(_activeTab == "text" ? "active" : "")" @onclick='() => SetTab("text")'>
                <i class="fas fa-comment-alt"></i>
                <span>Text Rooms</span>
                <span class="badge">@_textRooms.Count</span>
            </button>
            <button class="nav-item @(_activeTab == "bans" ? "active" : "")" @onclick='() => SetTab("bans")'>
                <i class="fas fa-gavel"></i>
                <span>Ban List</span>
            </button>
            <div class="nav-divider"></div>
            <button class="nav-item danger-zone">
                <i class="fas fa-power-off"></i>
                <span>Emergency Stop</span>
            </button>
        </nav>

        <div class="server-status">
            <div class="status-row">
                <span>CPU Load</span>
                <div class="progress-bar"><div class="fill" style="width: 34%"></div></div>
            </div>
            <div class="status-row">
                <span>Memory</span>
                <div class="progress-bar"><div class="fill warning" style="width: 72%"></div></div>
            </div>
            <div class="uptime">UPTIME: 14d 03h 22m</div>
        </div>
    </aside>

    
    <main class="admin-content">
        
        <header class="content-header">
            <div class="header-left">
                <h2 class="section-title">
                    <i class="fas @(_activeTab == "voice" ? "fa-wave-square" : "fa-align-left")"></i>
                    @(_activeTab == "voice" ? "Voice Traffic Monitor" : "Text Log Inspector")
                </h2>
                <span class="live-tag"><span class="pulse-dot"></span> REALTIME</span>
            </div>

            <div class="header-right">
                <div class="global-stats">
                    <div class="stat-box">
                        <span class="label">Total Online</span>
                        <span class="value">@(_voiceRooms.Count * 2 + 142)</span>
                    </div>
                    <div class="stat-box">
                        <span class="label">Connections</span>
                        <span class="value action-color">@_connectionsCount</span>
                    </div>
                </div>
            </div>
        </header>

        
        <div class="monitoring-grid">
            
            @if (_activeTab == "voice")
            {
                <div class="rooms-grid">
                    @foreach (var room in _voiceRooms)
                    {
                        <div class="room-card @(room.IsFlagged ? "flagged" : "")">
                            <div class="card-header">
                                <div class="room-id">
                                    <i class="fas fa-hashtag"></i>
                                    <code>@room.RoomId</code>
                                </div>
                                <div class="room-timer">@room.Duration.ToString(@"mm\:ss")</div>
                            </div>

                            <div class="users-visual">
                                @* User A *@
                                <div class="user-node">
                                    <div class="avatar-circle" title="@room.UserA_IP">A</div>
                                    <div class="audio-waves">
                                        <span></span><span></span><span></span>
                                    </div>
                                    <div class="user-meta">
                                        <code class="uid">@room.UserA_ID</code>
                                        <span class="uip">@room.UserA_IP</span>
                                    </div>
                                    <button class="btn-mini-ban" @onclick='() => QuickBan(room.UserA_ID)' title="Ban"><i class="fas fa-ban"></i></button>
                                </div>

                                <div class="connection-line">
                                    <i class="fas fa-exchange-alt"></i>
                                </div>

                                @* User B *@
                                <div class="user-node">
                                    <div class="avatar-circle secondary" title="@room.UserB_IP">B</div>
                                    <div class="audio-waves @(room.IsSilent ? "silent" : "")">
                                        <span></span><span></span><span></span>
                                    </div>
                                    <div class="user-meta">
                                        <code class="uid">@room.UserB_ID</code>
                                        <span class="uip">@room.UserB_IP</span>
                                    </div>
                                    <button class="btn-mini-ban" @onclick='() => QuickBan(room.UserB_ID)' title="Ban"><i class="fas fa-ban"></i></button>
                                </div>
                            </div>

                            <div class="card-actions">
                                <button class="btn-spy" @onclick='() => OpenSpyMode(room)'>
                                    <i class="fas fa-headset"></i> LISTEN / JOIN
                                </button>
                                <button class="btn-kill" @onclick='() => KillRoom(room.RoomId)'>
                                    <i class="fas fa-times"></i>
                                </button>
                            </div>
                        </div>
                    }
                </div>
            }
            else if (_activeTab == "text")
            {
                <div class="text-feed">
                   @foreach (var chat in _textRooms)
                   {
                       <div class="text-room-row">
                           <div class="text-room-info">
                               <div class="room-badge">TXT-@chat.RoomId</div>
                               <div class="participants">
                                   <span class="p-id">@chat.UserA_ID</span>
                                   <i class="fas fa-arrows-alt-h"></i>
                                   <span class="p-id">@chat.UserB_ID</span>
                               </div>
                           </div>
                           <div class="last-message-preview">
                               <span class="msg-author">@chat.LastMsgAuthor:</span>
                               <span class="msg-content">@chat.LastMessage</span>
                           </div>
                           <div class="row-actions">
                               <button class="btn-icon" @onclick='() => OpenSpyMode(chat)'><i class="fas fa-eye"></i></button>
                               <button class="btn-icon danger" @onclick='() => KillRoom(chat.RoomId)'><i class="fas fa-trash-alt"></i></button>
                           </div>
                       </div>
                   }
                </div>
            }

        </div>
        
        
        <div class="system-console">
            <div class="console-header">
                <span><i class="fas fa-terminal"></i> SYSTEM_LOGS.OUT</span>
                <button class="btn-clear" @onclick='() => _logs.Clear()'>CLEAR</button>
            </div>
            <div class="console-body">
                @foreach (var log in _logs)
                {
                    <div class="log-line @log.Type">
                        <span class="log-ts">[@log.Timestamp]</span>
                        <span class="log-msg">@((MarkupString)log.Message)</span>
                    </div>
                }
            </div>
        </div>

    </main>


    @if (_monitoredRoom != null)
    {
        <div class="spy-overlay-backdrop">
            <div class="spy-modal">
                <div class="spy-header">
                    <div class="spy-title">
                        <i class="fas fa-user-secret"></i> 
                        MONITORING ROOM: <code class="accent">@_monitoredRoom.RoomId</code>
                    </div>
                    <div class="spy-controls">
                        <span class="recording-indicator"><i class="fas fa-circle"></i> RECORDING</span>
                        <button class="btn-close-spy" @onclick="CloseSpyMode"><i class="fas fa-times"></i></button>
                    </div>
                </div>

                <div class="spy-content">
                    <div class="spy-visualizer">
                        <div class="spy-user-track">
                            <div class="track-info">@_monitoredRoom.UserA_ID (User A)</div>
                            <div class="track-wave"><div class="dummy-wave"></div></div>
                            <div class="track-vol"> -12dB</div>
                        </div>
                        <div class="spy-user-track">
                            <div class="track-info">@_monitoredRoom.UserB_ID (User B)</div>
                            <div class="track-wave"><div class="dummy-wave"></div></div>
                            <div class="track-vol"> -4dB</div>
                        </div>
                    </div>

                    <div class="spy-actions-panel">
                        <label>Admin Intervention:</label>
                        <div class="intervention-buttons">
                            <button class="btn-intervene"><i class="fas fa-microphone"></i> Speak to Both</button>
                            <button class="btn-intervene"><i class="fas fa-comment"></i> Send System Msg</button>
                            <button class="btn-intervene danger"><i class="fas fa-ban"></i> Ban Both</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>


<style>
    :root {
        --bg-core: #0f172a;       
        --bg-sidebar: #1e293b;    
        --bg-panel: rgba(30, 41, 59, 0.7);
        --glass-border: rgba(255, 255, 255, 0.08);
        --accent-primary: #818cf8; 
        --accent-glow: rgba(129, 140, 248, 0.25);
        --success: #10b981;       
        --danger: #ef4444;        
        --text-main: #f8fafc;
        --text-muted: #64748b;
        --font-ui: 'Inter', system-ui, sans-serif;
        --font-mono: 'JetBrains Mono', monospace;
    }

    body { margin: 0; padding: 0; background-color: var(--bg-core); color: var(--text-main); font-family: var(--font-ui); overflow: hidden; }


    .god-mode-layout {
        display: grid;
        grid-template-columns: 260px 1fr;
        grid-template-rows: 1fr;
        height: 100vh;
        width: 100vw;
    }


    .admin-sidebar {
        background: var(--bg-sidebar);
        border-right: 1px solid var(--glass-border);
        display: flex;
        flex-direction: column;
        padding: 20px;
        z-index: 10;
    }

    .sidebar-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        margin-bottom: 40px;
        padding-bottom: 20px;
        border-bottom: 1px solid var(--glass-border);
    }
    .brand-icon {
        font-size: 24px;
        color: var(--accent-primary);
        filter: drop-shadow(0 0 8px var(--accent-glow));
    }
    .brand-text { display: flex; flex-direction: column; }
    .brand-text .main { font-weight: 800; font-size: 18px; letter-spacing: 1px; }
    .brand-text .sub { font-size: 10px; color: var(--text-muted); text-transform: uppercase; letter-spacing: 2px; }

    .nav-menu { display: flex; flex-direction: column; gap: 8px; flex-grow: 1; }
    
    .nav-item {
        background: transparent;
        border: none;
        color: var(--text-muted);
        padding: 12px 16px;
        border-radius: 8px;
        display: flex; align-items: center; gap: 12px;
        cursor: pointer;
        transition: all 0.2s;
        font-family: var(--font-ui);
        font-weight: 500;
        font-size: 14px;
    }
    .nav-item:hover { background: rgba(255,255,255,0.05); color: #fff; }
    .nav-item.active { background: rgba(129, 140, 248, 0.1); color: var(--accent-primary); border-left: 3px solid var(--accent-primary); }
    .nav-item i { width: 20px; text-align: center; }
    
    .badge {
        margin-left: auto;
        background: rgba(255,255,255,0.1);
        padding: 2px 8px;
        border-radius: 10px;
        font-size: 11px;
        font-family: var(--font-mono);
    }

    .nav-divider { height: 1px; background: var(--glass-border); margin: 10px 0; }
    .danger-zone { color: var(--danger); }
    .danger-zone:hover { background: rgba(239, 68, 68, 0.1); }

    .server-status { padding: 15px; background: rgba(0,0,0,0.2); border-radius: 8px; }
    .status-row { display: flex; justify-content: space-between; align-items: center; margin-bottom: 8px; font-size: 11px; color: var(--text-muted); }
    .progress-bar { width: 60%; height: 4px; background: rgba(255,255,255,0.1); border-radius: 2px; overflow: hidden; }
    .fill { height: 100%; background: var(--accent-primary); }
    .fill.warning { background: #f59e0b; }
    .uptime { font-size: 10px; color: #444; font-family: var(--font-mono); text-align: center; margin-top: 5px; }

    /* CONTENT AREA */
    .admin-content {
        display: flex; flex-direction: column;
        background: var(--bg-core);
        padding: 0;
        position: relative;
    }

    /* HEADER */
    .content-header {
        height: 70px;
        padding: 0 30px;
        display: flex; justify-content: space-between; align-items: center;
        border-bottom: 1px solid var(--glass-border);
        background: rgba(15, 23, 42, 0.8);
        backdrop-filter: blur(10px);
    }
    
    .section-title { font-size: 18px; font-weight: 600; display: flex; align-items: center; gap: 10px; color: #fff; }
    .live-tag { margin-left: 15px; font-size: 10px; background: rgba(16, 185, 129, 0.1); color: var(--success); padding: 4px 8px; border-radius: 4px; display: flex; align-items: center; gap: 6px; font-weight: 700; }
    .pulse-dot { width: 6px; height: 6px; background: var(--success); border-radius: 50%; box-shadow: 0 0 5px var(--success); animation: pulse 1.5s infinite; }

    .global-stats { display: flex; gap: 20px; }
    .stat-box { display: flex; flex-direction: column; align-items: flex-end; }
    .stat-box .label { font-size: 10px; color: var(--text-muted); text-transform: uppercase; }
    .stat-box .value { font-family: var(--font-mono); font-size: 18px; font-weight: 700; color: #fff; }
    .action-color { color: var(--accent-primary); }

    .monitoring-grid {
        flex-grow: 1;
        padding: 30px;
        overflow-y: auto;
    }

    .rooms-grid {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(320px, 1fr));
        gap: 20px;
    }

    .room-card {
        background: var(--bg-panel);
        border: 1px solid var(--glass-border);
        border-radius: 12px;
        padding: 15px;
        position: relative;
        transition: transform 0.2s, border-color 0.2s;
    }
    .room-card:hover { border-color: rgba(255,255,255,0.2); transform: translateY(-2px); }
    .room-card.flagged { border-color: rgba(239, 68, 68, 0.5); background: rgba(239, 68, 68, 0.05); }

    .card-header { display: flex; justify-content: space-between; margin-bottom: 15px; }
    .room-id { font-family: var(--font-mono); font-size: 12px; color: var(--text-muted); display: flex; align-items: center; gap: 5px; }
    .room-timer { font-family: var(--font-mono); font-size: 12px; color: #fff; background: rgba(0,0,0,0.3); padding: 2px 6px; border-radius: 4px; }

    .users-visual { display: flex; justify-content: space-between; align-items: center; margin-bottom: 20px; position: relative; }
    .connection-line { position: absolute; left: 50%; top: 30%; transform: translate(-50%, -50%); color: var(--glass-border); font-size: 12px; z-index: 0; }
    
    .user-node { display: flex; flex-direction: column; align-items: center; gap: 8px; position: relative; z-index: 1; width: 45%; }
    .avatar-circle { width: 40px; height: 40px; background: linear-gradient(135deg, var(--accent-primary), #4338ca); border-radius: 50%; display: flex; align-items: center; justify-content: center; font-weight: 700; font-size: 14px; color: #fff; box-shadow: 0 4px 10px rgba(0,0,0,0.3); }
    .avatar-circle.secondary { background: linear-gradient(135deg, #64748b, #334155); }
    
    .audio-waves { display: flex; gap: 2px; height: 10px; align-items: flex-end; }
    .audio-waves span { width: 3px; background: var(--success); border-radius: 2px; animation: eq 1s infinite ease-in-out; }
    .audio-waves span:nth-child(2) { animation-delay: 0.1s; height: 60%; }
    .audio-waves span:nth-child(3) { animation-delay: 0.2s; height: 40%; }
    .audio-waves.silent span { height: 2px; animation: none; background: var(--text-muted); }

    .user-meta { display: flex; flex-direction: column; align-items: center; }
    .user-meta .uid { font-size: 11px; color: #fff; }
    .user-meta .uip { font-size: 9px; color: var(--text-muted); font-family: var(--font-mono); }

    .btn-mini-ban {
        position: absolute; top: 0; right: 0;
        background: rgba(0,0,0,0.6); color: var(--danger); border: none; border-radius: 50%; width: 20px; height: 20px;
        font-size: 10px; cursor: pointer; display: none;
    }
    .user-node:hover .btn-mini-ban { display: flex; align-items: center; justify-content: center; }

    .card-actions { display: grid; grid-template-columns: 1fr 40px; gap: 10px; }
    .btn-spy { background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); color: var(--accent-primary); border-radius: 6px; font-size: 11px; font-weight: 600; cursor: pointer; transition: 0.2s; }
    .btn-spy:hover { background: var(--accent-primary); color: #fff; }
    .btn-kill { background: rgba(239, 68, 68, 0.1); border: 1px solid rgba(239, 68, 68, 0.2); color: var(--danger); border-radius: 6px; cursor: pointer; }
    .btn-kill:hover { background: var(--danger); color: #fff; }


    .text-feed { display: flex; flex-direction: column; gap: 10px; }
    .text-room-row { background: var(--bg-panel); border: 1px solid var(--glass-border); padding: 12px 20px; border-radius: 8px; display: grid; grid-template-columns: 200px 1fr 80px; align-items: center; gap: 20px; }
    .room-badge { font-family: var(--font-mono); font-size: 11px; color: var(--accent-primary); background: rgba(129, 140, 248, 0.1); padding: 2px 6px; border-radius: 4px; width: fit-content; margin-bottom: 4px; }
    .participants { font-size: 11px; color: #ccc; display: flex; gap: 8px; align-items: center; }
    .last-message-preview { font-size: 13px; color: var(--text-muted); white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
    .msg-author { color: #fff; font-weight: 600; margin-right: 5px; }
    .row-actions { display: flex; gap: 5px; justify-content: flex-end; }
    .btn-icon { background: transparent; border: none; color: var(--text-muted); cursor: pointer; padding: 5px; transition: 0.2s; }
    .btn-icon:hover { color: #fff; }
    .btn-icon.danger:hover { color: var(--danger); }


    .system-console {
        height: 200px;
        background: #000;
        border-top: 1px solid var(--glass-border);
        display: flex; flex-direction: column;
        font-family: var(--font-mono);
    }
    .console-header { background: #111; padding: 5px 15px; font-size: 11px; color: #888; display: flex; justify-content: space-between; align-items: center; border-bottom: 1px solid #222; }
    .btn-clear { background: transparent; border: none; color: #555; font-size: 9px; cursor: pointer; }
    .btn-clear:hover { color: #fff; }
    
    .console-body { flex-grow: 1; overflow-y: auto; padding: 10px; font-size: 12px; }
    .log-line { margin-bottom: 4px; line-height: 1.4; color: #aaa; }
    .log-ts { color: #444; margin-right: 8px; }
    .log-line.warn .log-msg { color: #fbbf24; }
    .log-line.err .log-msg { color: #ef4444; }
    .log-line.success .log-msg { color: #10b981; }


    .spy-overlay-backdrop {
        position: fixed; top: 0; left: 0; width: 100vw; height: 100vh;
        background: rgba(0,0,0,0.8); backdrop-filter: blur(5px);
        z-index: 100;
        display: flex; align-items: center; justify-content: center;
    }
    .spy-modal {
        width: 600px;
        background: #1e293b;
        border: 1px solid var(--accent-primary);
        box-shadow: 0 0 30px rgba(129, 140, 248, 0.2);
        border-radius: 12px;
        overflow: hidden;
    }
    .spy-header {
        background: linear-gradient(90deg, rgba(129,140,248,0.1), transparent);
        padding: 15px 20px;
        display: flex; justify-content: space-between; align-items: center;
        border-bottom: 1px solid var(--glass-border);
    }
    .spy-title { color: #fff; font-size: 14px; font-weight: 600; display: flex; align-items: center; gap: 10px; }
    .spy-title .accent { color: var(--accent-primary); font-family: var(--font-mono); }
    .spy-controls { display: flex; align-items: center; gap: 15px; }
    .recording-indicator { color: var(--danger); font-size: 10px; font-weight: 700; animation: pulse 1s infinite; display: flex; align-items: center; gap: 5px; }
    .btn-close-spy { background: transparent; border: none; color: #aaa; cursor: pointer; font-size: 16px; }
    .btn-close-spy:hover { color: #fff; }

    .spy-content { padding: 20px; }
    .spy-visualizer { background: #0f172a; border-radius: 8px; padding: 15px; margin-bottom: 20px; border: 1px solid var(--glass-border); }
    .spy-user-track { display: flex; align-items: center; gap: 15px; margin-bottom: 10px; }
    .track-info { width: 120px; font-size: 11px; color: var(--text-muted); text-align: right; }
    .track-wave { flex-grow: 1; height: 24px; background: rgba(255,255,255,0.05); border-radius: 4px; overflow: hidden; position: relative; }
    .dummy-wave { width: 100%; height: 100%; background: repeating-linear-gradient(90deg, transparent 0, transparent 2px, var(--success) 3px); opacity: 0.3; }
    .track-vol { width: 40px; font-family: var(--font-mono); font-size: 10px; color: #666; }

    .spy-actions-panel label { display: block; font-size: 11px; color: var(--text-muted); margin-bottom: 10px; text-transform: uppercase; }
    .intervention-buttons { display: grid; grid-template-columns: 1fr 1fr 1fr; gap: 10px; }
    .btn-intervene { background: rgba(255,255,255,0.05); border: 1px solid var(--glass-border); color: #fff; padding: 8px; border-radius: 6px; font-size: 11px; cursor: pointer; display: flex; align-items: center; justify-content: center; gap: 6px; }
    .btn-intervene:hover { background: rgba(255,255,255,0.1); }
    .btn-intervene.danger { color: var(--danger); border-color: rgba(239, 68, 68, 0.3); }
    .btn-intervene.danger:hover { background: var(--danger); color: #fff; }

    @@keyframes eq { 0%, 100% { height: 20%; } 50% { height: 100%; } }
    @@keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.5; } 100% { opacity: 1; } }
</style>

@code {
    private string _activeTab = "voice";
    private int _connectionsCount = 2841;
    
    // --- MOCK MODELS ---
    public class VoiceRoom
    {
        public string RoomId { get; set; }
        public string UserA_ID { get; set; }
        public string UserA_IP { get; set; }
        public string UserB_ID { get; set; }
        public string UserB_IP { get; set; }
        public TimeSpan Duration { get; set; }
        public bool IsFlagged { get; set; } 
        public bool IsSilent { get; set; }
    }

    public class TextRoom
    {
        public string RoomId { get; set; }
        public string UserA_ID { get; set; }
        public string UserB_ID { get; set; }
        public string LastMessage { get; set; }
        public string LastMsgAuthor { get; set; }
    }

    public class LogEntry
    {
        public string Timestamp { get; set; }
        public string Message { get; set; }
        public string Type { get; set; } = "info"; 
    }

    private List<VoiceRoom> _voiceRooms = new();
    private List<TextRoom> _textRooms = new();
    private List<LogEntry> _logs = new();
    
    
    private VoiceRoom? _monitoredRoom;

    protected override void OnInitialized()
    {
        // генерируем "мясо" для интерфейса
        var rnd = new Random();
        for (int i = 0; i < 12; i++)
        {
            _voiceRooms.Add(new VoiceRoom {
                RoomId = Guid.NewGuid().ToString().Substring(0, 6).ToUpper(),
                UserA_ID = $"User-{rnd.Next(1000, 9999)}",
