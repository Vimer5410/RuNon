    {
        if (room is VoiceRoom vr) _monitoredRoom = vr;
        AddLog("SPY", $"Started monitoring session for Room {room.RoomId}", "warn");

    }

    private void CloseSpyMode()
    {
        _monitoredRoom = null;
        AddLog("SPY", "Monitoring session ended.", "info");
    }

