    private void KillRoom(string roomId)
    {
        var room = _voiceRooms.FirstOrDefault(r => r.RoomId == roomId);
        if (room != null) {
            _voiceRooms.Remove(room);
            AddLog("ROOM", $"Room {roomId} terminated forcefully.", "warn");
        }
    }

    
